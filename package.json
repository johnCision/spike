{
  "name": "@johncision/spike",
  "description": "",
  "version": "3.0.0",
  "type": "module",
  "files": [
    "src/**/*.js"
  ],
  "scripts": {
    "ux": "node src/ux/ux src/ux.env.json",
    "lint": "node_modules/.bin/eslint --quiet .",
    "test": "node_modules/.bin/mocha .",
    "coverage": "c8 --check-coverage --all npm run test -- --no-parallel --reporter min"
  },
  "eslintConfig": {
    "extends": [
      "@johncision/eslint-config/module"
    ],
    "ignorePatterns": "spec/**",
    "env": {
      "node": true
    },
    "rules": {
      "fp/no-unused-expression": 0,
      "fp/no-nil": 0,
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "import/no-nodejs-modules": "warn",
      "import/no-internal-modules": [
        "warn",
        {
          "allow": [
            "**/http"
          ]
        }
      ],
      "spellcheck/spell-checker": [
        "error",
        {
          "minLength": 4,
          "skipWords": [
            "utf8",
            "oauth",
            "passphrase",
            "charset",
            "pathname",
            "argv",
            "lang",
            "jsonwebtoken",
            "href"
          ]
        }
      ]
    }
  },
  "nodemone": {},
  "mocha": {
    "spec": [
      "spec/*.spec.js"
    ],
    "watch": false,
    "sort": false,
    "forbitOnly": true,
    "check-leaks": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnCision/spike.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johnCision/spike/issues"
  },
  "homepage": "https://github.com/johnCision/spike#readme",
  "devDependencies": {
    "@johncision/eslint-config": "^3.0.9",
    "c8": "^7.10.0",
    "chai": "^4.3.4",
    "eslint": "^8.0.1",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-spellcheck": "^0.0.19",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.13"
  },
  "dependencies": {
    "jsonwebtoken": "^8.5.1",
    "synk": "^0.0.2"
  }
}
